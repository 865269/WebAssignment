@model WebAssignment.Models.BlogPostDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Blog Post</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.BlogPost.Post)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BlogPost.Post)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Comments
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Comment item in Model.Comments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CommentContent)
                </td>
            </tr>
        }
    </tbody>
</table>

<h4>Write New Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BlogPostID" value="@Model.BlogPost.Id" />
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.BlogPost.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
